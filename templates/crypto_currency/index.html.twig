{% extends('base.html.twig') %}


{% block body %}
    <h1>Cryptocurrency List</h1>

    <div class="container">
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Symbol</th>
                <th>Current Price</th>
                <th>Total Volume</th>
            </tr>
            </thead>
            <tbody>
            {% for crypto in cryptos %}
                <tr>
                    <td>{{ crypto.name }}</td>
                    <td>
                        <a href="{{ path('crypto_currency_by_symbol', { 'symbol': crypto.symbol }) }}">
                            {{ crypto.symbol }}
                        </a>
                    </td>
                    <td>{{ crypto.currentPrice }}</td>
                    <td>{{ crypto.totalVolume }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="forms-container">



            <h2>Compare Cryptocurrencies</h2>
            <form method="get" action="{{ path('crypto_currency_compare') }}">
                <label for="symbol1">Currency 1:</label>
                <input type="text" id="symbol1" name="symbol1">
                <br>
                <label for="symbol2">Currency 2:</label>
                <input type="text" id="symbol2" name="symbol2">
                <br>
                <button type="submit">Compare</button>
            </form>

            <h2>Filter by Price</h2>
            <form method="get" action="{{ path('crypto_currency_by_price') }}">
                <label for="minPrice">Min Price:</label>
                <input type="number" id="minPrice" name="min">
                <br>
                <label for="maxPrice">Max Price:</label>
                <input type="number" id="maxPrice" name="max">
                <br>
                <button type="submit">Filter</button>
            </form>

            <h2>Top 10 Cryptocurrencies</h2>
            <form method="get" action="{{ path('crypto_currency_top_10_current_price') }}">
                <button type="submit">View Top 10 by Current Price</button>
            </form>

            <form method="get" action="{{ path('crypto_currency_top_10_ath') }}">
                <button type="submit">View Top 10 by All-Time High (ATH)</button>
            </form>
        </div>
    </div>
{% endblock %}
